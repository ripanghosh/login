  <nav>
    <div class="b1">
      <img
        src="https://banglarshiksha.gov.in/assets/frontend/images/logo_bangali.png"
        alt=""
      />
    </div>
    <div class="b2">
      <img
        src="https://banglarshiksha.gov.in/assets/frontend/home/images/shikha.png"
        alt=""
      />
    </div>
    <div class="b3">
      <img
        src="https://banglarshiksha.gov.in/assets/frontend/images/education_first.png"
        alt=""
      />
    </div>
